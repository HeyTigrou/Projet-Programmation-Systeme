<UserControl
    x:Class="easy_save.Desktop.MVVM.View.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Border Margin="30">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <TextBlock
                    Margin="20,10,0,0"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    Foreground="AliceBlue"
                    Text="{DynamicResource TypeOfLog}" />

                <ComboBox>
                    <ComboBoxItem IsSelected="{Binding JsonIsSelected}" Content="Json"/>
                    <ComboBoxItem IsSelected="{Binding XmlIsSelected}" Content="XML"/>
                    <ComboBoxItem IsSelected="{Binding BothAreSelected}" Content="XML and Json"/>
                </ComboBox>
                
                <Button
                    Width="70"
                    Height="30"
                    HorizontalAlignment="Left"
                    Margin="0,10,10,0"
                    Command="{Binding ChangeLogExtension}"
                    Content="{DynamicResource LogFileExtension}"
                    FontSize="15" />
            </StackPanel>

            <StackPanel Grid.Row="1">

                <TextBlock
                    Margin="20,10,0,0"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    Foreground="AliceBlue"
                    Text="{DynamicResource Encrypt}" />

                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    Orientation="Horizontal">

                    <ListBox
                        x:Name="MyListOfExtension"
                        Width="180"
                        Height="90"
                        ItemsSource="{Binding MyListOfExtension}"
                        SelectedItem="{Binding ExtensionSelected}" />

                    <StackPanel>
                        <Button
                            Width="70"
                            Height="30"
                            Margin="10,15,10,0"
                            Command="{Binding AddExtensionToEncrypt}"
                            Content="{DynamicResource AddLog}"
                            FontSize="15" />

                        <Button
                            Width="70"
                            Height="30"
                            Margin="10,10,10,0"
                            Command="{Binding RemoveExtensionToEncrypt}"
                            Content="{DynamicResource RemoveLog}"
                            FontSize="15" />
                    </StackPanel>

                    <ListBox
                        x:Name="ExtensionToEncrypt"
                        Width="180"
                        Height="90"
                        ItemsSource="{Binding ExtensionToEncrypt}"
                        SelectedItem="{Binding ExtensionSelected}" />

                </StackPanel>

            </StackPanel>

        </Grid>
    </Border>
</UserControl>