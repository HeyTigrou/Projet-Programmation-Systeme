<UserControl
    x:Class="easy_save.Desktop.MVVM.View.CreateView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:easy_save.Desktop.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel>

        <!--  Name Text  -->
        <TextBlock
            Margin="20,10,0,0"
            HorizontalAlignment="Left"
            FontSize="14"
            Foreground="AliceBlue"
            Text="{DynamicResource Name}" />

        <!--  Name Input  -->
        <StackPanel Orientation="Horizontal">
            <TextBox
                x:Name="nameTextBox"
                Width="500"
                Height="40"
                Margin="10"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                Text="{Binding SaveName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
        </StackPanel>

        <!--  Source Text  -->
        <TextBlock
            Margin="20,10,0,0"
            HorizontalAlignment="Left"
            FontSize="14"
            Foreground="AliceBlue"
            Text="{DynamicResource Source}" />

        <!--  Source Input  -->
        <StackPanel Orientation="Horizontal">
            <TextBox
                x:Name="sourceTextBox"
                Width="500"
                Height="40"
                Margin="10"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                Text="{Binding PathSource, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        </StackPanel>

        <!--  Destination Text  -->
        <TextBlock
            Margin="20,10,0,0"
            HorizontalAlignment="Left"
            FontSize="14"
            Foreground="AliceBlue"
            Text="{DynamicResource Destination}" />

        <!--  Destination Input  -->
        <StackPanel Orientation="Horizontal">
            <TextBox
                x:Name="destinationTextBox"
                Width="500"
                Height="40"
                Margin="10"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                Text="{Binding PathDestination, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        </StackPanel>

        <!--  Type of Backup Text  -->
        <TextBlock
            Margin="20,10,0,0"
            HorizontalAlignment="Left"
            FontSize="14"
            Foreground="AliceBlue"
            Text="{DynamicResource TypeOfBackup}" />

        <!--  Type of Backup  -->
        <RadioButton
            x:Name="complete"
            Margin="0,0,10,5"
            Content="{DynamicResource Complete}"
            Foreground="AliceBlue"
            IsChecked="{Binding Path=CompleteIsChecked}"/>

        <RadioButton
            x:Name="differential"
            Margin="0,5,10,0"
            Content="{DynamicResource Differential}"
            Foreground="AliceBlue"  />


        <!--  Create Button  -->
        <Button
            Command="{Binding CreateCommand}"
            Content="{DynamicResource ToCreate}"
            FontSize="14"
            FontWeight="Medium"
            Foreground="AliceBlue">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#353340" />
                    <Setter Property="Cursor" Value="Hand" />
                    <Setter Property="HorizontalAlignment" Value="Right" />

                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF4C70" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border
                        Width="100"
                        Height="40"
                        Background="{TemplateBinding Background}"
                        CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </StackPanel>

</UserControl>
