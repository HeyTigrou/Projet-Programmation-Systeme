<Window
    x:Class="easy_save.Desktop.MVVM.View.PopupProcessRunningView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:easy_save.Desktop.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Error can't start save process"
    Width="340"
    Height="150"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label>
            <TextBlock>
                Business software running, unable to start save process.<LineBreak /><LineBreak />
                Please shutdown the business process.</TextBlock>
        </Label>
        <Button
            Width="50"
            Height="20"
            Margin="255,70,15,15"
            Click="Button_Click"
            Content="Fermer" />
    </Grid>
</Window>
